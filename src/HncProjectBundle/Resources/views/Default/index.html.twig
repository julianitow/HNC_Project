                                    {% for share in ftse_data['ShareData'] %}
                                        <tr>
                                            <th scope="row">{{ share['Sym'] }}</th>
                                            <td>{{ share['Name'] }}</td>
                                            <td>Test</td>
                                            <td>{{ share['CurPrice'] }}$</td>
                                            {% if share['Chg'] < 0 %}
                                                <td><a id="Chg_neg"><i class="fas fa-caret-down"></i>{{ share['Chg'] }}</a></td>
                                            {% elseif share['Chg'] > 0 %}
                                                <td><a id="Chg_pos"><i class="fas fa-caret-up"></i>{{ share['Chg'] }}</a></td>
                                            {% else %}
                                                <td>N/A</td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div><!--shares_table-->
                    </div><!--col-lg-8-->
                {% endif%}
            </div><!--container-fluid-->
    <!-- </div>row-->
{% endblock %}

