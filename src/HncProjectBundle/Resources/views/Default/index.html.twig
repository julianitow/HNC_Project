                {% else %}
                    <div class="col-lg-8">
                        <form class="form-group form-inline" style="margin-left: 5%">
                            <input class="form-control" type="text" placeholder="Search.." name="search">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
