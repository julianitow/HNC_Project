                                    <tr>
                                        <th scope="col">EPIC</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Share volume</th>
                                        <th scope="col">Current price</th>
                                        <th scope="col">Day change</th>
                                    </tr>
                                    </thead>
